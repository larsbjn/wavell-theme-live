-moz-box-shadow: 3px 5px 5px -1px rgba(0,0,0,0.2);">
    {% assign product = all_products[productname] %}
    <div style="text-align: center; text-transform: uppercase;">
        <h4>{{ title }}</h4>
        <p>{% if product.type != '' %}{{ product.type }}{% else %}Wavell{% endif %}</p>
    </div>
    <img style="width: 80%; margin: 10px auto;" alt="{{ product.title }}" src="{{ product.featured_image | img_url: 'large' }}"/>
    <h4 style="margin: 20px 0">{{ product.price | money }}</h4>
